<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_theme_bg"
    android:id="@+id/user_center">
    <include  layout="@layout/include_title_view"
        android:id="@+id/title_bar"/>
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_bar"
        android:layout_above="@+id/linearLayout2">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="78dp"
                android:layout_height="78dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="14dp"
                android:id="@+id/user_avatar"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/input_bg"
                android:layout_margin="12dp"
                android:orientation="vertical"
                android:id="@+id/linearLayout"
                android:layout_below="@+id/user_avatar">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:id="@+id/name_layout"
                    android:layout_height="48dp"
                    android:background="@drawable/item_bg">
                    <ImageView
                        style="@style/user_center_image_style"
                        android:src="@mipmap/user_icon"
                        android:layout_marginTop="2dp"
                        android:id="@+id/image"/>
                    <TextView
                        style="@style/user_center_text_style"
                        android:layout_toRightOf="@+id/image"
                        android:text="@string/user_center_name"
                        android:id="@+id/text1"/>
                    <TextView
                        style="@style/add_car_item_input_style"
                        android:id="@+id/user_name"
                        android:text="111"
                        android:layout_toRightOf="@+id/text1"/>
                    <ImageView
                        style="@style/item_arrow"/>
                </RelativeLayout>
                <include layout="@layout/view_line_gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:id="@+id/sex_layout"
                    android:background="@drawable/item_bg">
                    <ImageView
                        style="@style/user_center_image_style"
                        android:src="@mipmap/gender_icon"
                        android:id="@+id/image2"/>
                    <TextView
                        style="@style/user_center_text_style"
                        android:layout_toRightOf="@+id/image2"
                        android:text="@string/user_center_sex"
                        android:id="@+id/text2"/>
                    <TextView
                        style="@style/add_car_item_input_style"
                        android:id="@+id/user_sex"
                        android:layout_toRightOf="@+id/text2"/>
                    <ImageView
                        style="@style/item_arrow"/>
                </RelativeLayout>
                <include layout="@layout/view_line_gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp">
                    <ImageView
                        style="@style/user_center_image_style"
                        android:src="@mipmap/position_icon"
                        android:layout_marginBottom="2dp"
                        android:id="@+id/image1"/>
                    <TextView
                        style="@style/user_center_text_style"
                        android:layout_toRightOf="@+id/image1"
                        android:id="@+id/text3"
                        android:text="@string/user_center_location"/>
                    <TextView
                        style="@style/add_car_item_input_style"
                        android:id="@+id/user_address"
                        android:layout_toRightOf="@+id/text3"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:orientation="vertical"
                android:background="@drawable/input_bg"
                android:layout_below="@+id/linearLayout">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/item_bg"
                    android:id="@+id/update_phone_layout">
                    <ImageView
                        style="@style/user_center_image_style"
                        android:src="@mipmap/phone_icon"
                        android:layout_marginTop="2dp"
                        android:id="@+id/image3"/>
                    <TextView
                        style="@style/user_center_text_style"
                        android:layout_toRightOf="@+id/image3"
                        android:text="@string/user_center_tel_change"/>
                    <ImageView
                        style="@style/item_arrow"/>
                </RelativeLayout>
                <include layout="@layout/view_line_gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/item_bg"
                    android:id="@+id/update_psd_layout">
                    <ImageView
                        style="@style/user_center_image_style"
                        android:src="@mipmap/update_password"
                        android:id="@+id/image4"/>
                    <TextView
                        style="@style/user_center_text_style"
                        android:layout_toRightOf="@+id/image4"
                        android:text="@string/user_center_password_change"/>
                    <ImageView
                        style="@style/item_arrow"/>
                </RelativeLayout>
                <include layout="@layout/view_line_gray"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/item_bg"
                    android:id="@+id/register_layout">
                    <ImageView
                        style="@style/user_center_image_style"
                        android:src="@mipmap/register_new"
                        android:id="@+id/image5"/>
                    <TextView
                        style="@style/user_center_text_style"
                        android:layout_toRightOf="@+id/image5"
                        android:text="@string/user_center_register"/>
                    <ImageView
                        style="@style/item_arrow"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="@drawable/item_bg"
                    android:id="@+id/connect_service">
                    <ImageView
                        style="@style/user_center_image_style"
                        android:src="@mipmap/message_icon"
                        android:layout_marginBottom="2dp"
                        android:id="@+id/image6"/>
                    <TextView
                        style="@style/user_center_text_style"
                        android:layout_toRightOf="@+id/image6"
                        android:text="@string/user_center_service"/>
                    <ImageView
                        style="@style/item_arrow"/>
                </RelativeLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout2">
        <Button
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="@drawable/red_button_bg"
            android:text="@string/user_center_quit"
            android:id="@+id/exit_btn"
            android:textColor="@color/white"
            android:layout_gravity="center"
            android:layout_marginBottom="8dp"/>
    </LinearLayout>
</RelativeLayout>