<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:textSize="16sp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:gravity="center_vertical"
        android:textColor="@color/home_text_color"
        android:id="@+id/catalog"
        android:background="@color/list_catalog_color"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:padding="10dp"
       android:id="@+id/type_linearLayout">
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_weight="100"
           android:layout_gravity="center_vertical"
           android:textSize="20sp"
           android:id="@+id/type"/>
       <car.ccut.com.vehicle.view.SmoothCheckBox
           android:layout_width="18dp"
           android:layout_height="18dp"
           android:layout_gravity="center_vertical|right"
           android:layout_margin="5dp"
           app:color_unchecked="#ECECEC"
           app:color_unchecked_stroke="#A39999"
           app:color_checked="@color/app_theme_blue"
           android:id="@+id/checkbox"/>
   </LinearLayout>
</LinearLayout>